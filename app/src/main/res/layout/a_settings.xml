<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.botxgames.sdule.activities.ASettings">

    <TextView
        android:id="@+id/a_settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:layout_gravity="top|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textSize="48sp"
        android:textColor="@color/colorAccent"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="24 hour format"
        android:textSize="32dp"
        android:id="@+id/a_settings_24"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show next day"
        android:textSize="32dp"
        android:id="@+id/a_settings_nextday"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vibrate"
        android:textSize="32dp"
        android:id="@+id/a_settings_vibrate"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/a_settings_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/a_settings_reminder_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remind me before"
            android:textColor="@color/colorWhite"
            android:textSize="32dp"/>

        <TextView
            android:id="@+id/a_settings_reminder_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="at the time of activity"
            android:textSize="20dp"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>

    <TextView
        android:id="@+id/a_settings_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="32sp"/>

    <TextView
        android:id="@+id/a_settings_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="developed by Pranay Karani"
        android:textSize="12sp"
        android:layout_margin="4dp"
        android:gravity="bottom|end"
        android:textColor="@color/colorAccent"/>

</LinearLayout>
